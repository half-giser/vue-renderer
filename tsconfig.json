{
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "src/types/*.ts"],
    "outDir": "./dist",
    "rootDir": "./src",
    "compilerOptions": {
        "lib": ["es2020", "dom"],
        "strict": true,
        "noEmit": true,
        // "declaration": true,
        // "declarationDir": "./src",
        // "declarationMap": false,
        // "emitDeclarationOnly": true,
        "allowImportingTsExtensions": true,
        "target": "es2016",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "skipLibCheck": true
    }
}
